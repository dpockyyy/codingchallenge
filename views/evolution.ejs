<div class="grid-wrapper">
    <div class="problem">
        <div class="center">
            <div class="nav-bar">
                <div class="statement nav-bar-btn" ><h2>Statement</h2></div>
                <div class="ai-assistant nav-bar-btn"><h2>Drill Sergeant Goggins</h2></div>
                <div class="solution nav-bar-btn"><h2>Solution</h2></div>
            </div>
        </div>

        <div class="statement-window">
            <h2><%=task_title%></h2>
            <p><%=description%></p>
        </div>

        
        <div class="ai-assistant-window">
            
            <!-- <div class="conversation">
                <pre class="conversation-window"></pre>
            </div> -->

            <!-- <textarea placeholder="Help me find the error in my code" class="ai-assistant-input"></textarea> -->

            <div class="container">
                
                <!-- Chat inbox  -->
                <div class="chat-page">
                    <div class="msg-inbox">
                        <div class="chats">
                            <!-- Message container -->
                      <div class="msg-page">
                          <!-- Incoming messages -->
                          
                          
                          <div class="received-msg">
                              <p>
                            Hey Coding Warriors, I'm your relentless guide, Drill Sergeant Goggins, ready to push you beyond your limits, break through the barriers of code, and forge a mindset of unyielding determination. 
                            </p>
                        </div>
                      </div>
                    </div>
                    
                    <!-- msg-bottom section -->
                    
                    <div class="msg-bottom">
                      <div class="input-group">
                          <input
                          type="text"
                          class="form-control ai-assistant-input"
                          placeholder="Help me find the error in my code"
                          />
                          
                          <button class="ai-send">Send ></button>
                          
                        </div>
                    </div>
                </div>
            </div>
              </div>
        </div>
        
        <div class="solution-window">
            <div class="solution-grid">
                <div class="editor-solution">
                    <div class="editor-solution__wrapper">
                        <div class="editor__body">
                            <div id="editorCode2" class="solution__code"></div>
                        </div>
                        <div class="editor__footer">
                            <div class="editor__footer--left">
        
                            </div>
                            <div class="editor__footer--right">
        
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>

    </div>


    <div class="editor">
        <div class="editor__wrapper">
            <div class="editor__body">
                <div id="editorCode" class="editor__code"></div>
            </div>
            <div class="editor__footer">
                <div class="editor__footer--left">
                    <button class="editor__btn editor__run">Run ></button>
                    <button class="editor__btn editor__reset">Reset ></button>
                    <button class="editor__btn editor__submit">Submit ></button>
                </div>
                <div class="editor__footer--right">
                    <div class="editor__console">
                        <ul class="editor__console-logs"></ul>
                    </div>
                </div>
            </div>
            <div class="spacer-test"></div>
        </div>
    </div>
    <div class="answers"><%=answers%></div>
    <div class="default_code"><%=default_code%></div>
    <div class="solution_code"><%=solution_code%></div>
</div>
<script src="/ace.js"></script>
<script src="/editor.js"></script>
<script src="/editor-console.js"></script>
<script src="/ext-language_tools.js"></script>
<script src="/mode-javascript.js"></script>
<script src="/client.js"></script>
